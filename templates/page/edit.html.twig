{% extends 'base.html.twig' %}

{% block title %}Modifier une page{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="/assets/styles/admin_form.css">
<link rel="stylesheet" href="/assets/styles/page_form.css">
{% endblock %}

{% block javascripts %}
<script src="/assets/js/tinymce.js"></script>
{% endblock %}

{% block body %}

<main>

    <h1>Modifier une page</h1>
    <p class="subtitle"><span style="color: red">*</span> Champs obligatoires</p>

    {{ form_start(form) }}

    <div class="form-field required">
        {{ form_label(form.name) }}
        {{ form_widget(form.name) }}
        {{ form_errors(form.name) }}
    </div>
    
    <div class="form-field">
        {{ form_label(form.subtitle) }}
        {{ form_widget(form.subtitle) }}
        {{ form_errors(form.subtitle) }}
    </div>

    <div class="form-field required">
        {{ form_label(form.slug) }}
        {{ form_widget(form.slug) }}
        {{ form_errors(form.slug) }}
    </div>
    
    <div class="form-field">
        {{ form_label(form.headerImage) }}
        {{ form_widget(form.headerImage) }}
        {{ form_errors(form.headerImage) }}
    </div>
    {% if attribute(form, 'deleteImage') is defined %}
    <div class="form-field form-switch-field">
        {{ form_label(form.deleteImage) }}
        <label class="field-switch">
            {{ form_widget(form.deleteImage) }}
            <span class="field-switch-slider"></span>
        </label>
        {{ form_errors(form.deleteImage) }}
    </div>
    <p class="form-switch-description">Cette page contient une image, vous pouvez la supprimer en cochant la case.</p>
    {% endif %}

    <div class="form-field">
        {{ form_label(form.content) }}
        {{ form_errors(form.content) }}
        {{ form_widget(form.content) }}
    </div>

    <div class="form-actions">
        <a href="{{ path('pages') }}" class="btn btn-secondary">Annuler</a>
        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
    </div>
    
    {{ form_end(form) }}

</main>

{% endblock %}
